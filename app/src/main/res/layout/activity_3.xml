<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/droiod"
    tools:context=".Activity3"
    tools:visibility="visible">


    <Button
        android:id="@+id/buttonCamara"
        android:layout_width="183dp"
        android:layout_height="162dp"
        android:background="@android:drawable/ic_menu_camera"
        android:text="Camara"
        app:layout_constraintBottom_toTopOf="@+id/button3Main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <Button
        android:id="@+id/button3Main"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:text="Main"
        android:layout_margin="25dp"
        app:cornerRadius="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageCamara"
        android:layout_width="258dp"
        android:layout_height="253dp"
        app:layout_constraintBottom_toTopOf="@+id/button3Main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCamara"
        app:layout_constraintVertical_bias="0.314"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>